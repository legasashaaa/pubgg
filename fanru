import logging
from aiogram import Bot, Dispatcher, executor, types
from aiogram.types import ReplyKeyboardMarkup, KeyboardButton

# –í—Å—Ç–∞–≤—å—Ç–µ —Å—é–¥–∞ –≤–∞—à —Ç–æ–∫–µ–Ω, –ø–æ–ª—É—á–µ–Ω–Ω—ã–π –æ—Ç @BotFather
API_TOKEN = '8359144154:AAHjtb0jDRTwk7e-SolczcmbUD8CnXXxedY'

# –ù–∞—Å—Ç—Ä–æ–π–∫–∞ –ª–æ–≥–∏—Ä–æ–≤–∞–Ω–∏—è
logging.basicConfig(level=logging.INFO)

# –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –±–æ—Ç–∞ –∏ –¥–∏—Å–ø–µ—Ç—á–µ—Ä–∞
# parse_mode="HTML" –ø–æ–∑–≤–æ–ª—è–µ—Ç –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å –∂–∏—Ä–Ω—ã–π —à—Ä–∏—Ñ—Ç –∏ —Å—Å—ã–ª–∫–∏
bot = Bot(token=API_TOKEN, parse_mode=types.ParseMode.HTML)
dp = Dispatcher(bot)

# –§—É–Ω–∫—Ü–∏—è –¥–ª—è —Å–æ–∑–¥–∞–Ω–∏—è –≥–ª–∞–≤–Ω–æ–≥–æ –º–µ–Ω—é
def get_main_menu():
    keyboard = ReplyKeyboardMarkup(resize_keyboard=True)
    
    btn1 = KeyboardButton('üõçÔ∏è –ö–∞—Ç–∞–ª–æ–≥')
    btn2 = KeyboardButton('üì¢ –ù–∞—à –∫–∞–Ω–∞–ª')
    btn3 = KeyboardButton('ü§ñ –¢–µ—Ö.–ü–æ–¥–¥–µ—Ä–∂–∫–∞')
    btn4 = KeyboardButton('üë§ –ü—Ä–æ—Ñ–∏–ª—å / –ë–∞–ª–∞–Ω—Å')
    btn5 = KeyboardButton('‚ùì –ö–∞–∫ –∫—É–ø–∏—Ç—å')
    btn6 = KeyboardButton('üì© –û—Ç–∑—ã–≤—ã')
    
    # –î–æ–±–∞–≤–ª—è–µ–º –∫–Ω–æ–ø–∫–∏ –ø–æ –ø–∞—Ä–∞–º, –∫–∞–∫ –Ω–∞ —Å–∫—Ä–∏–Ω—à–æ—Ç–µ
    keyboard.row(btn1, btn2)
    keyboard.row(btn3, btn4)
    keyboard.row(btn5, btn6)
    
    return keyboard

# –û–±—Ä–∞–±–æ—Ç–∫–∞ –∫–æ–º–∞–Ω–¥—ã /start
@dp.message_handler(commands=['start'])
async def send_welcome(message: types.Message):
    # –¢–µ–∫—Å—Ç —Å–æ–æ–±—â–µ–Ω–∏—è —Å–æ –≤—Å–µ–π —Ä–∞–∑–º–µ—Ç–∫–æ–π
    welcome_text = (
        "–°–ø–∞—Å–∏–±–æ, —á—Ç–æ —Ä–µ—à–∏–ª–∏ –≤–æ—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å—Å—è –Ω–∞—à–∏–º —Å–µ—Ä–≤–∏—Å–æ–º.\n"
        "‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ\n"
        "–ï—Å–ª–∏ —É –≤–∞—Å –µ—Å—Ç—å –≤–æ–ø—Ä–æ—Å—ã –∏–ª–∏ –ø—Ä–æ–±–ª–µ–º—ã —Å —Ç–æ–≤–∞—Ä–æ–º –∫—É–ø–ª–µ–Ω–Ω—ã–º –≤ –Ω–∞—à–µ–º –±–æ—Ç–µ —Ç–æ –Ω–∞–ø–∏—à–∏—Ç–µ –Ω–∞–º –≤ –ø–æ–¥–¥–µ—Ä–∂–∫—É, "
        "–Ω–∞–π—Ç–∏ –µ–µ –≤—ã –º–æ–∂–µ—Ç–µ –ø–æ –∫–Ω–æ–ø–∫–µ ¬´ ü§ñ –¢–µ—Ö.–ü–æ–¥–¥–µ—Ä–∂–∫–∞¬ª —Ç–∞–∫ –∂–µ –±–æ–ª—å—à–∏–Ω—Å—Ç–≤–æ –æ—Ç–≤–µ—Ç–æ–≤ –Ω–∞ –≤–∞—à–∏ –≤–æ–ø—Ä–æ—Å—ã –µ—Å—Ç—å "
        "–≤ —Å—Ç–∞—Ç—å–µ –ø–æ –∫–Ω–æ–ø–∫–µ ¬´ ‚ùì –ö–∞–∫ –∫—É–ø–∏—Ç—å¬ª\n\n"
        "üìù –ü–µ—Ä–µ–¥ –Ω–∞—á–∞–ª–æ–º –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏—è –±–æ—Ç–∞ –ø–æ–∂–∞–ª—É–π—Å—Ç–∞, –æ–∑–Ω–∞–∫–æ–º—å—Ç–µ—Å—å —Å "
        "–ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å—Å–∫–∏–º —Å–æ–≥–ª–∞—à–µ–Ω–∏–µ–º"
    )
    
    await message.answer(welcome_text, reply_markup=get_main_menu(), disable_web_page_preview=True)

# –û–±—Ä–∞–±–æ—Ç–∫–∞ –ª—é–±–æ–≥–æ –¥—Ä—É–≥–æ–≥–æ —Ç–µ–∫—Å—Ç–∞ (–∑–∞–≥–ª—É—à–∫–∞)
@dp.message_handler()
async def unknown_message(message: types.Message):
    error_text = (
        "#@$%?&!... –ü–æ—Ö–æ–∂–µ —è –≤–∞—Å –Ω–µ –ø–æ–Ω—è–ª\n"
        "–ü–æ–ø—Ä–æ–±—É–π—Ç–µ –≤–æ—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å—Å—è –º–µ–Ω—é –Ω–∏–∂–µ –∏–ª–∏ –≤–≤–µ–¥–∏—Ç–µ ‚ùØ‚ùØ‚ùØ /start"
    )
    await message.answer(error_text)

if __name__ == '__main__':
    # –ó–∞–ø—É—Å–∫ –±–æ—Ç–∞
    executor.start_polling(dp, skip_updates=True)
